{
  "name": "neo4j-mcpserver",
  "version": "1.0.4",
  "description": "A Neo4j MCP server implementation for managing graph database operations",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "neo4j-mcpserver": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "node build/index.js",
    "check-env": "node -e \"['NEO4J_URI', 'NEO4J_USER', 'NEO4J_PASSWORD'].forEach(env => { if (!process.env[env]) throw new Error(`Missing ${env} environment variable`); });\"",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "build",
    "package.json"
  ],
  "keywords": [
    "neo4j",
    "mcp",
    "server",
    "graph-database"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "neo4j-driver": "^5.17.0",
    "zod": "^3.22.4",
    "dotenv": "^16.4.1"
  },
  "engines": {
    "node": ">=16"
  }
}
